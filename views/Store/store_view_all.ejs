<!DOCTYPE html>
<html>
<head>
    <title>Store -View All</title>
</head>
<body>
<h1>Stores</h1>
<a href="/store/add">Add a new Store</a> <br/><br/>

<table border ="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Specialty</th>
        <th>Actions</th>
    </tr>
    <% for(var i=0; i<store.length; i++){ %>
    <tr>
        <td><%= store[i].store_id %></td>
        <td><%= store[i].name %> </td>
        <td><%= store[i].specialty %> </td>
        <td>
            <a href='/store/edit/?store_id=<%= store[i].store_id %> '>
                Edit
            </a>
        </td>
        <% } %>
    </tr>


</table>
</body>
</html>