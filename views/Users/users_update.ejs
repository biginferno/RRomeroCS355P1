<!DOCTYPE html>
<html>
<head>
    <title>Users - Update</title>
</head>
<body>
<h1>Edit User</h1>
<br/>
<form action="/user/update" method="get">

    User First Name:
    <input id="first_name"
           name="first_name"
           type="text" value="<%= user.first_name %>"
    />
    User Last Name:
    <input id="last_name"
           name="last_name"
           type="text" value="<%= user.last_name %>"
    />
    <br/>
    Sex:
    <input id="sex"
           name="sex"
           type="text" value="<%= user.sex %>"
    />
    <br/>
    Age:
    <input id="age"
           name="age"
           type="text" value="<%= user.age %>"
           />
    <br/>
    Day:
    <input id="day"
           name="day"
           type="text" value="<%= user.day %>"
    />
    <br/>
    Month:
    <input
           id= "month"
           name="month"
           value="<%= user.month %>"
    />
    Year:
    <input id="year"
           name="year"
           type="text" value="<%= user.year %>"
    />
    <br/>
    Wine Preference:
    <input id="wine_preference"
           name="wine_preference"
           type="text" value="<%= user.wine_preference %>"
    />
    <br/>
    Food Preference:
    <input id="food_preference"
           name="food_preference"
           type="text" value="<%= user.food_preference %>"
    />
    <br/>
    Email
    <input
            id= "email"
            name="email"
            type="text" value="<%= user.email %>"
    />
    <br/>
    <input  type="hidden"
            id= "user_id"
            name="user_id"
            value="<%= user.user_id %>"
    />
    <br />
    <br />
    <input type="submit" />
</form>
</body>
</html>


