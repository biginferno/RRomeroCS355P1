<!DOCTYPE html>
<html>
<head>
    <title>Wine - Add</title>
</head>
<body>
<h1>Edit Wine</h1>
<br/>
<form action="/wine/update" method="get">
    Wine Name:
    <input id="name"
           name="name"
           type="text" value="<%= wine.name %>"
    />
    <br/>
    Color:
    <input id="color"
           name="color"
           type="text" value="<%= wine.color %>"
    />
    <br/>
    Wine Varietal:
    <input id="varietals"
           name="varietals"
           type="text" value="<%= wine.varietals %>"
    />
    <br/>
    ABV:
    <input id="ABV"
           name="ABV"
           type="text" value="<%= wine.ABV %>"
    />
    <br/>
    Year:
    <input
            id= "year"
            name="year"
            value="<%= wine.year %>"
    />

    <br/>

    Winery
    <br />
    <% for(var i=0; winery_result.length>i;i++) {
        var checked = "";
    %>
    <input type = "radio" name="winery_id" <%= checked %> value="<%= winery_result[i].winery_id %>">
    <%= winery_result[i].name %>
    <br />
    <% } %>
    <br/>
    Store
    <br/>
    <% for(var i=0; store_result.length>i;i++) {

        var checked = "";
        if(store_result[i].store_id != null) {
            checked = "checked";
        }
    %>

    <input type = "checkbox"
           name="store_id"

           value= " <%= store_result[i].store_id %> " >
    <%= store_result[i].name  %>
    <br />
    <% } %>
    <br/>
    <br/>

    <input  type="hidden"
            id= "wine_id"
            name="wine_id"
            value="<%= wine.wine_id %>"
    />


    <br />


    <br />
    <input type="submit" />
</form>
</body>
</html>